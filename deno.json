{
  "tasks": {
    "dev": "deno run -A --unstable --watch=config.json,.env source/server.ts --port=9000 --sync",
    "serve": "deno run --allow-env --allow-read=. --allow-run --allow-net --allow-write=repo --unstable source/server.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.190.0/",
    "superstruct": "npm:superstruct@^1.0.3"
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false
  }
}
