{
  "tasks": {
    "dev": "deno run -A --watch=config.json --env source/server.ts --port=9000",
    "serve": "deno run --allow-env --allow-read=. --allow-run --allow-net --allow-write=repo source/server.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.222.1/",
    "gruber/": "https://esm.r0b.io/gruber@0.4.1/"
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false
  }
}
